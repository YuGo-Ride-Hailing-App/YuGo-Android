<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimaryVariant">

            <ImageView
                android:id="@+id/imageViewVehicle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/car_model_01"
                android:layout_marginEnd="20dp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/textViewVehicleCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:text="@string/category"
                android:textStyle="bold"
                android:textColor="@color/dark_gray_white"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageViewVehicle" />

            <TextView android:id="@+id/textViewEstimatedTimeOfRideEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2:03pm"
                android:layout_toEndOf="@+id/imageViewVehicle"
                android:layout_below="@+id/textViewVehicleCategory"
                android:layout_alignParentEnd="true" />
            <ImageView
                android:id="@+id/imageViewPersonIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:layout_alignBottom="@+id/textViewVehicleCategory"
                android:layout_toEndOf="@+id/textViewVehicleCategory"
                app:tint="@color/dark_gray_white"
                app:srcCompat="@drawable/person_icon"/>
            <TextView
                android:id="@+id/textViewPersonCount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="3"
                android:layout_marginStart="1dp"
                android:layout_alignBottom="@+id/imageViewPersonIcon"
                android:layout_toEndOf="@+id/imageViewPersonIcon"/>
            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="$9.99"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>