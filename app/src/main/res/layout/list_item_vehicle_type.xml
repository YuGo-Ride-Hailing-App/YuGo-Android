<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_dark_gray">

            <ImageView
                android:id="@+id/imageViewVehicle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@raw/car_model"
                android:layout_marginEnd="20dp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/textViewVehicleCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/category"
                android:layout_toEndOf="@+id/imageViewVehicle"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textColor="@color/dark_gray_pewter"
                />

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="$9.99"
                android:textColor="@color/dark_gray_pewter"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>