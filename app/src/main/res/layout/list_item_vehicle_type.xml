<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_dark_gray">

            <ImageView
                android:id="@+id/imageViewVehicle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@raw/car_model"
                android:layout_marginEnd="20dp"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/vehicle" />

            <TextView android:id="@+id/textViewEstimatedTimeOfRideEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2:03pm"
                android:layout_toEndOf="@+id/imageViewVehicle"
                android:layout_below="@+id/categoryContainer"
                android:layout_alignParentEnd="true"
                android:textColor="@color/dark_gray_pewter"
                android:alpha="0.8"/>
            <LinearLayout
                android:id="@+id/categoryContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/imageViewVehicle"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textViewVehicleCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/category"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/dark_gray_pewter"/>

                <ImageView
                    android:id="@+id/imageViewPersonIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="4dp"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/dark_gray_pewter"
                    app:srcCompat="@drawable/icon_person"
                    android:contentDescription="@string/person" />
                <TextView
                    android:id="@+id/textViewPersonCount"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="3"
                    android:layout_marginStart="1dp"
                    android:textColor="@color/dark_gray_pewter"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="$9.99"
                android:textColor="@color/dark_gray_pewter"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>