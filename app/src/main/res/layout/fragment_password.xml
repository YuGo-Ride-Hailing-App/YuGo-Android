<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".gui.fragments.account.PasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/editTextCurrentPassword"
            android:text="@string/current_password"
            android:textColor="@color/dark_gray_pewter"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editTextCurrentPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:autofillHints="Current password"
            android:background="@drawable/selector_editview_round"
            android:enabled="false"
            android:hint="@string/current_password"
            android:inputType="textPassword"
            android:textColor="@color/dark_gray"
            android:textColorHint="#616161" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/editTextNewPassword"
            android:text="@string/new_password"
            android:textColor="@color/dark_gray_pewter"
            android:textSize="15sp"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/editTextNewPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:autofillHints="@string/new_password"
            android:background="@drawable/selector_editview_round"
            android:enabled="false"
            android:hint="@string/new_password"
            android:inputType="textPassword"
            android:textColor="@color/dark_gray"
            android:textColorHint="#616161" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/editTextConfirmPassword"
            android:text="@string/confirm_password"
            android:textColor="@color/dark_gray_pewter"
            android:textSize="15sp"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/editTextConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:autofillHints="@string/confirm_password"
            android:background="@drawable/selector_editview_round"
            android:enabled="false"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:textColor="@color/dark_gray"
            android:textColorHint="#616161" />

        <Button
            android:id="@+id/buttonEditPassword"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="20dp"
            android:text="@string/edit_password" />

        <Button
            android:id="@+id/buttonSavePassword"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="20dp"
            android:text="@string/save_changes"
            android:visibility="gone" />


    </LinearLayout>

</RelativeLayout>