<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".gui.account.PassengerReportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_date"
            android:id="@+id/textViewStartDateLabel"
            android:textColor="@color/dark_gray_pewter"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="22.11.2022."
            android:layout_gravity="center_vertical"
            android:id="@+id/textViewStartDateValue"
            android:layout_weight="1"
            android:textColor="@color/dark_gray_pewter"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/buttonPickStartingDate"
            android:layout_marginStart="15dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/dark_gray_pewter"
            android:layout_gravity="end"
            app:tint="@color/white_dark_gray"
            android:src="@drawable/ic_calendar"

            android:background="@drawable/round_image_button"/>
    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_date"
            android:id="@+id/textViewEndDateLabel"
            android:textColor="@color/dark_gray_pewter"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="7dp"
            android:text="22.11.2022."
            android:layout_gravity="center_vertical"
            android:id="@+id/textViewEndDateValue"
            android:textColor="@color/dark_gray_pewter"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/buttonPickEndDate"
            android:layout_marginStart="15dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:backgroundTint="@color/dark_gray_pewter"
            app:tint="@color/white_dark_gray"
            android:src="@drawable/ic_calendar"
            android:background="@drawable/round_image_button"/>
    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/buttonPreviousReport"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/arrow_left_icon"
            app:tint="@color/white_dark_gray"
            android:backgroundTint="@color/dark_gray_pewter"
            android:background="@drawable/round_image_button"/>
        <TextSwitcher
            android:layout_width="0dp"
            android:id="@+id/textSwitcherReport"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/dark_gray_pewter"
                android:textSize="20sp"/>
        </TextSwitcher>
        <ImageButton
            android:id="@+id/buttonNextReport"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/arrow_right_icon"
            app:tint="@color/white_dark_gray"
            android:backgroundTint="@color/dark_gray_pewter"
            android:background="@drawable/round_image_button"/>
    </LinearLayout>


</LinearLayout>