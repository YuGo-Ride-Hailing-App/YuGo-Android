<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFavouritePath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/visibleFavouritePathPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/fromContainer"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/startIco"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_vertical"
                        app:tint="@color/dark_gray_pewter"
                        app:srcCompat="@drawable/location"
                        android:alpha="0.8"/>
                    <TextView
                        android:id="@+id/startDest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_vertical"
                        android:text="Zmaj Jovina 54"

                        android:textSize="20sp"/>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/hiddenPathCheckPoints"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/fromContainer"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:id="@+id/checkpoint1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/checkpoint1icon"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/circle_icon"
                            android:layout_gravity="center_vertical"
                            app:tint="@color/dark_gray_pewter"/>
                        <TextView
                            android:id="@+id/checkpoint1text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/dark_gray_pewter"
                            android:text="Bulevar Mihajla Pupina 13"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/checkpoint2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/checkpoint2icon"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/circle_icon"
                            android:layout_gravity="center_vertical"
                            app:tint="@color/dark_gray_pewter"/>
                        <TextView
                            android:id="@+id/checkpoint2text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/dark_gray_pewter"
                            android:text="Marka Aurelija 24"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/checkpoint3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/checkpoint3icon"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/circle_icon"
                            android:layout_gravity="center_vertical"
                            app:tint="@color/dark_gray_pewter"/>
                        <TextView
                            android:id="@+id/checkpoint3text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/dark_gray_pewter"
                            android:text="Milosa Obilica 148"
                            android:textSize="14sp"/>
                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:id="@+id/toContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/hiddenPathCheckPoints"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/endIco"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        app:tint="@color/dark_gray_pewter"
                        app:srcCompat="@drawable/location"
                        android:alpha="0.8"/>
                    <TextView
                        android:id="@+id/endDest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bulevar Evrope 30"
                        android:layout_gravity="center_vertical"
                        android:textSize="20sp"/>

                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/hiddenFavouritePathPart"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_below="@+id/visibleFavouritePathPart"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/distanceContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/delimiterLine3"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:id="@+id/durationIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/distance"
                        app:tint="@color/dark_gray_pewter"
                        android:layout_marginStart="25dp"
                        android:layout_gravity="center_vertical"
                        android:scaleX="1.5"
                        android:scaleY="1.5"/>
                    <TextView
                        android:id="@+id/distanceLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="?attr/colorSecondaryVariant"
                        android:text="Distance"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/distanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:text="3.2km"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:alpha="0.7"
                    android:textAlignment="textEnd"
                    android:textSize="20sp" />



                <View
                    android:id="@+id/delimiterLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/distanceContainer"
                    android:layout_marginTop="10dp"
                    android:alpha="0.6"
                    android:background="?attr/colorPrimary"/>


                <View
                    android:id="@+id/delimiterLine3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:alpha="0.6"
                    android:background="?attr/colorPrimary"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/durationContainer"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp">
                    <Button
                        android:id="@+id/editFavouriteRoute"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:text="Edit"
                        android:layout_alignParentBottom="true"/>

                    <Button
                        android:id="@+id/deleteFavourite"
                        android:layout_width="120dp"
                        android:layout_marginStart="15dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FF4C4C"
                        android:text="Decline" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/durationContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/delimiterLine"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:id="@+id/distanceIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/duration"
                        app:tint="@color/dark_gray_pewter"
                        android:layout_marginStart="20dp"/>
                    <TextView
                        android:id="@+id/durationLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textColor="?attr/colorSecondaryVariant"
                        android:text="Duration"
                        android:layout_gravity="center_vertical"
                        android:textSize="18sp" />

                </LinearLayout>
                <TextView
                    android:id="@+id/durationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/delimiterLine"
                    android:text="32min"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:alpha="0.7"
                    android:textAlignment="textEnd"
                    android:textSize="20sp" />



            </RelativeLayout>
            <ImageButton
                android:id="@+id/arrowBtnFavouriteRoute"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                app:srcCompat="@drawable/arrow_down"
                app:tint="@color/dark_gray_pewter"
                android:layout_below="@+id/hiddenFavouritePathPart"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginBottom="-7dp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>