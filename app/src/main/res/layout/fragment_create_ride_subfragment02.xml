<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.CreateRideSubfragment02"
    android:background="?attr/colorPrimaryVariant">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:textColor="@color/dark_gray_white"
        android:textSize="20sp"
        android:text="@string/pick_vehicle_category"/>
    <include
        layout="@layout/vehicle_type_card"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="10dp"/>
    <include
        layout="@layout/vehicle_type_card"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="10dp"/>
    <include
        layout="@layout/vehicle_type_card"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="10dp"/>
    <CheckBox
        android:id="@+id/checkBoxIncludeBaby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/dark_gray_white"
        android:text="@string/include_baby"/>
    <CheckBox
        android:id="@+id/checkBoxIncludePets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/dark_gray_white"
        android:text="@string/include_pets"/>

</LinearLayout>