<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="400dp"
    tools:context=".gui.fragments.home.CreateRideLoader">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/driverSearchingMessage"
            android:text="@string/we_are_searching_a_driver_for_your_ride_please_wait"
            android:textStyle="bold"
            android:textColor="@color/dark_gray_pewter"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:id="@+id/loadingPanel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
            <ImageButton
                android:id="@+id/buttonReturnToSubfrag01"
                android:visibility="invisible"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/dark_gray_pewter"
                app:tint="@color/white_dark_gray"
                android:src="@drawable/icon_arrow_left"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_round_image_button"/>
        </RelativeLayout>
    </LinearLayout>


</FrameLayout>