<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="-15dp"
        android:text="â–²"
        android:layout_marginStart="30dp"
        android:textSize="35dp"
        android:alpha="0.6"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/triangle"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/driverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="?attr/colorSecondaryVariant"
                android:text="Vukasin Bogdanovic"
                android:textSize="20dp"
                android:alpha="0.5"/>
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/driverName"
                android:background="?attr/colorPrimary"
                android:alpha="0.6"/>
            <TextView
                android:id="@+id/messageDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:padding="10dp"
                android:textColor="?attr/colorSecondaryVariant"
                android:text="Message Driver"
                android:textSize="20dp"/>
            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/messageDriver"
                android:background="?attr/colorPrimary"
                android:alpha="0.6"/>
            <TextView
                android:id="@+id/callDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:padding="10dp"
                android:textColor="?attr/colorSecondaryVariant"
                android:text="Call Driver"
                android:textSize="20dp"/>
            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/callDriver"
                android:background="?attr/colorPrimary"
                android:alpha="0.6"/>
            <TextView
                android:id="@+id/reportDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line3"
                android:padding="10dp"
                android:textColor="?attr/colorSecondaryVariant"
                android:text="Report Driver"
                android:textSize="20dp"/>
            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/reportDriver"
                android:background="?attr/colorPrimary"
                android:alpha="0"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>