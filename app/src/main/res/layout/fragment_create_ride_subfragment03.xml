<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_dark_gray"
    tools:context=".gui.fragments.home.CreateRideSubfragment03">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:textColor="@color/dark_gray_pewter"
        android:textSize="20sp"
        android:text="@string/pick_time_of_the_ride"/>
    <CheckBox
        android:id="@+id/useCurrentTimeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/now"
        android:textColor="@color/dark_gray_pewter"
        android:buttonTint="@color/yellowish"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="20dp"
            android:layout_weight="5"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:background="@color/dark_gray_pewter"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/dark_gray_pewter"
            android:gravity="center"
            android:textSize="15sp"
            android:text="@string/or_book_in_advance"/>
        <View
            android:layout_width="20dp"
            android:layout_weight="5"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:background="@color/dark_gray_pewter"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/dark_gray_pewter"
        android:text="@string/time"/>

    <TimePicker
        android:id="@+id/rideTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/dark_gray_pewter"
        android:timePickerMode="spinner" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/dark_gray_pewter"
        android:text="@string/date"/>

    <DatePicker
        android:id="@+id/rideDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:textColor="@color/dark_gray_pewter" />

</LinearLayout>