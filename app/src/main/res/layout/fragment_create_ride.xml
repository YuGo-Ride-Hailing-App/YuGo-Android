<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRideFragment">


    <LinearLayout
        android:layout_width="350dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="10dp">

        <include
            layout="@layout/destination_picker_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/checkBoxIncludeBaby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/include_baby"/>
        <CheckBox
            android:id="@+id/checkBoxIncludePets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/include_pets"/>



    </LinearLayout>




</FrameLayout>